source ~/.shvars

alias grep='grep --color=auto'
alias ls='ls -Ah --color=force'
if [[ $TERM_CHECK == "zsh" ]] ; then
	alias lsd='ls -d *(/)'
	alias lsf='ls -d *(^/)'
fi
#Let's leave dir raw
alias ping='ping -c 5'
alias cat='less'
alias rm='rm -I'
alias x='exit'
alias ssh='ssh -CX'

alias yaourt='yaourt --noconfirm'
alias yogurt='sudo yaourt --noconfirm'
alias milkshake='yaourt -Ss'

alias screenshot="scrot '%Y.%m.%d @ %H:%M:%S ($wx$h).png' -e 'nice -n 20 optipng "$f"; mv "$f" ~/Obrazy/'"

alias servedir='python -m SimpleHTTPServer 9321'