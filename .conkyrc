# Create own window instead of using desktop (required in nautilus)
own_window yes
own_window_type desktop
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager,no_shadow

# ARGB can be used for real transparency, note that a composite manager is required for real transparency
own_window_argb_visual true
# Set the transparency alpha value from 0 to 255
own_window_argb_value 255

# Use double buffering (reduces flicker, may not work for everyone)
double_buffer yes

use_xft yes
xftfont DejaVu Sans:size=8
xftalpha 1.0
text_buffer_size 2048

update_interval 1.0

# Draw shades?
draw_shades no
# Text stuff
draw_outline no # amplifies text if yes
draw_borders no
uppercase no # set to yes if you want all text to be in uppercase
stippled_borders 3
border_width 10
# Default colors and also border colors, grey90 == #e5e5e5
default_color grey90

alignment top_right

gap_x 10
gap_y 10

